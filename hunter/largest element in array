#include<stdio.h>
int main(void)
{
	int arr[]={34,87,87,45,76,86,454,978};
	int n=sizeof(arr)/sizeof(arr[0]);
	printf("\nthe largest number in array:%d",lar(arr,n));
	return 0;
}
int lar(int arr[],int n)
{ 
	int max_arr=arr[0];
	for(int i=0;i<=n;i++)
	
		if(arr[i]>max_arr)
		
			max_arr=arr[i];
		
		return max_arr;
		
            
}
